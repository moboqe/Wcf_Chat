<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="62*"/>
            <ColumnDefinition Width="227*"/>
            <ColumnDefinition Width="107*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="23" Margin="100,24,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" Width="521" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button x:Name="btnConDisc"  Click="Button_Click"  Content="Connect" HorizontalAlignment="Left" Margin="39,24,0,0" VerticalAlignment="Top" Width="75"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="238" Margin="39,62,0,0" VerticalAlignment="Top" Width="706" Grid.ColumnSpan="3"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="74" Margin="39,319,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="706" Grid.ColumnSpan="3" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
